<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>videoChatApp</title>
    <link rel="stylesheet" href="../style.css" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    
    <script src="https://unpkg.com/three@0.87.1/build/three.js"></script>
<script src="https://unpkg.com/three@0.87.1/examples/js/controls/OrbitControls.js"></script>
<script src="https://unpkg.com/three@0.87.1/examples/js/loaders/GLTFLoader.js"></script>


    <script src="//unpkg.com/filament@1.10.0/filament.js"></script>
    <script src="//unpkg.com/gl-matrix@2.8.1"></script>
    
    <script>
      const ROOM_ID = "<%= roomId %>";
      const USER_TYPE = "<%= userType %>";
      const AGENT_ID = "<%= agent %>";
    </script>
  </head>
  <body> 
      <div id="video_div">
        <%if (userType != "agent") { %>
          <div id="canvas-container" hidden=True>
          </div>
        <% } %>
      </div>
      <div id="pip__div">
        
      </div>
    <div class="main"> 
      <div class="options">
        <div class="options__left">
          <div id="stopVideo" class="options__button">
            <i class="fa fa-video-camera"></i>
          </div>
          <div id="muteButton" class="options__button">
            <i class="fa fa-microphone"></i>
          </div>
          <div id="disconnect" class="options__button">
            <i class="fa fa-remove" ></i>
          </div>

          <%if (userType == "agent") { %>

            <div id="screenshot" class="options__button">
              <i class="fa fa-camera"></i>
            </div>
          
           <% } %>
        </div>
        <%if (userType == "agent") { %>
          <div class="options__right">
            <div id="arUp" class="options__button">
              <i class="fa fa-arrow-up"></i>
            </div>
            <div id="arDown" class="options__button">
              <i class="fa fa-arrow-down"></i>
            </div>
            <div id="arLeft" class="options__button">
              <i class="fa fa-arrow-left"></i>
            </div>
            <div id="arRight" class="options__button">
              <i class="fa fa-arrow-right"></i>
            </div>
          </div>
        <% } %>
        
      </div>
  </div>
  </body>
  <script src="../script.js"></script>

  <%if (userType != "agent") { %>
    <script src="../ar_gl.js"></script>
  <% } %>
</html>
